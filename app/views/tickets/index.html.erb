<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0 text-dark"><i class="bi bi-inbox-fill me-2"></i>Gestión de Tickets</h2>
    <%= link_to new_ticket_path, class: "btn btn-primary shadow-sm" do %>
      <i class="bi bi-plus-lg me-1"></i> Nuevo Ticket
    <% end %>
  </div>

  <%# Sección de Filtros %>
  <div class="card mb-4 bg-light border-0 shadow-sm">
    <div class="card-body p-3">
      <%= form_with url: tickets_path, method: :get, class: "row g-3" do |f| %>
        <div class="col-md-4">
          <%= f.select :status, Ticket.statuses.keys.map { |s| [s.humanize, s] }, { selected: params[:status], prompt: "Todos los Estados" }, { class: "form-select", onchange: "this.form.submit()" } %>
        </div>
        <div class="col-md-4">
          <%= f.select :priority, Ticket.priorities.keys.map { |p| [p.humanize, p] }, { selected: params[:priority], prompt: "Todas las Prioridades" }, { class: "form-select", onchange: "this.form.submit()" } %>
        </div>
        <div class="col-md-4">
          <%= link_to tickets_path, class: "btn btn-outline-secondary w-100" do %>
            <i class="bi bi-arrow-counterclockwise me-1"></i> Limpiar Filtros
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <%# Tabla con espacios laterales %>
  <div class="card shadow-sm border-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-dark">
          <tr>
            <th class="ps-4">ID</th> <%# Espacio a la izquierda %>
            <th>Asunto</th>
            <th>Cliente</th>
            <th>Prioridad</th>
            <th>Estado</th>
            <th>Fecha</th>
            <th class="text-end pe-4">Acción</th> <%# Espacio a la derecha %>
          </tr>
        </thead>
        <tbody>
          <% @tickets.each do |ticket| %>
            <tr>
              <td class="ps-4"><span class="text-muted fw-bold">#<%= ticket.id %></span></td>
              <td>
                <div class="fw-bold"><%= ticket.title %></div>
                <small class="text-muted"><%= ticket.category.name %></small>
              </td>
              <td><%= ticket.user.name %></td>
              <td>
                <span class="<%= priority_badge_class(ticket.priority) %>">
                  <i class="bi bi-circle-fill small me-1"></i><%= ticket.priority.humanize %>
                </span>
              </td>
              <td>
                <span class="badge rounded-pill <%= status_badge_class(ticket.status) %>">
                  <%= ticket.status.humanize %>
                </span>
              </td>
              <td class="small text-muted"><%= ticket.created_at.strftime("%d %b") %></td>
              <td class="text-end pe-4">
                <%= link_to ticket_path(ticket), class: "btn btn-outline-primary btn-sm rounded-pill px-3" do %>
                  <i class="bi bi-eye-fill me-1"></i> Gestionar
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>