<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0"><i class="bi bi- megaphone me-2"></i>Reportar Nuevo Problema</h4>
        </div>
        <div class="card-body p-4">
          <%= form_with(model: @ticket, local: true) do |f| %>
            
            <div class="mb-3">
              <%= f.label :title, "Resumen del problema", class: "form-label fw-bold" %>
              <%= f.text_field :title, class: "form-control", placeholder: "¿Qué está fallando?", required: true %>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :category_id, "Categoría", class: "form-label fw-bold" %>
                <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Seleccionar..." }, { class: "form-select", required: true } %>
              </div>
              <div class="col-md-6 mb-3">
                <%= f.label :priority, "Prioridad", class: "form-label fw-bold" %>
                <%= f.select :priority, Ticket.priorities.keys.map { |p| [p.humanize, p] }, {}, { class: "form-select" } %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :description, "Cuéntanos más detalles", class: "form-label fw-bold" %>
              <%= f.text_area :description, rows: 4, class: "form-control", placeholder: "Describe el error paso a paso...", required: true %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Enviar Ticket", class: "btn btn-primary btn-lg" %>
              <%= link_to "Cancelar", root_path, class: "btn btn-light" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>