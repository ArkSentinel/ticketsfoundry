<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
          <h4 class="mb-0 text-primary">
            <i class="bi bi-ticket-perforated-fill me-2"></i><%= @ticket.title %>
          </h4>
          <span class="badge rounded-pill <%= @ticket.resolved? || @ticket.closed? ? 'bg-success' : 'bg-warning text-dark' %>">
            <i class="bi bi-info-circle me-1"></i><%= @ticket.status.humanize %>
          </span>
        </div>
        <div class="card-body">
          <p class="text-muted small">
            <i class="bi bi-person"></i> Reportado por <strong><%= @ticket.user.name %></strong> | 
            <i class="bi bi-calendar-event"></i> <%= @ticket.created_at.strftime("%d/%m/%Y %H:%M") %>
          </p>
          <hr>
          <h5 class="card-title text-secondary">Descripción</h5>
          <p class="card-text border p-3 bg-light rounded"><%= @ticket.description %></p>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-header bg-light d-flex align-items-center">
          <i class="bi bi-chat-left-text-fill me-2"></i>Historial y Comentarios
        </div>
        <div class="card-body">
          <div class="mb-4">
            <% if @ticket.comments.any? %>
              <% @ticket.comments.each do |comment| %>
                <div class="p-3 mb-2 rounded border-start border-4 <%= comment.user.role == 'agent' ? 'border-primary bg-light' : 'border-secondary' %>">
                  <div class="d-flex justify-content-between">
                    <strong><i class="bi bi-person-circle me-1"></i><%= comment.user.name %></strong>
                    <small class="text-muted"><%= comment.created_at.strftime("%H:%M - %d/%m/%Y") %></small>
                  </div>
                  <p class="mb-0 mt-2 text-dark"><%= comment.body %></p>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-3">
                <i class="bi bi-chat-dots text-muted h3"></i>
                <p class="text-muted">No hay comentarios en este ticket aún.</p>
              </div>
            <% end %>
          </div>

          <hr>

          <h6 class="mb-3">Añadir respuesta</h6>
          <%= form_with(model: [@ticket, Comment.new], local: true) do |f| %>
            <div class="mb-3">
              <%= f.text_area :body, rows: 3, class: "form-control", placeholder: "Escribe aquí tu actualización o consulta..." %>
            </div>
            <div class="text-end">
              <%= f.submit "Enviar Mensaje", class: "btn btn-outline-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      
      <div class="card shadow-sm mb-4 border-primary">
        <div class="card-header bg-primary text-white">
          <i class="bi bi-gear-fill me-2"></i>Acciones de Agente
        </div>
        <div class="card-body">
          <%= form_with(model: @ticket, local: true) do |f| %>
            <div class="mb-3">
              <label class="form-label fw-bold">Cambiar Estado</label>
              <%= f.select :status, Ticket.statuses.keys.map { |s| [s.humanize, s] }, {}, { class: "form-select mb-2" } %>
            </div>
            
            <div class="mb-3">
              <label class="form-label fw-bold">Asignar a:</label>
              <%= f.collection_select :assignee_id, User.all, :id, :name, { include_blank: "Sin asignar" }, { class: "form-select" } %>
            </div>

            <div class="d-grid shadow-sm">
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-1"></i>Actualizar Ticket
              </button>
            </div>
          <% end %>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-header bg-dark text-white py-2">
          Detalles del Ticket
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <strong>Prioridad:</strong> 
            <span class="float-end fw-bold">
              <span class="<%= priority_badge_class(@ticket.priority) %>">
                <i class="bi bi-circle-fill small me-1"></i><%= @ticket.priority.humanize %>
              </span>
            </span>
          </li>
          <li class="list-group-item">
            <strong>Categoría:</strong> 
            <span class="float-end fw-bold">
              <i class="bi bi-tag me-1"></i><%= @ticket.category.name %>
            </span>
          </li>
          <li class="list-group-item">
            <strong>ID del Ticket:</strong> 
            <span class="float-end text-muted">#<%= @ticket.id %></span>
          </li>
        </ul>
      </div>
      
      <div class="mt-3 text-center">
        <%= link_to root_path, class: "btn btn-link text-decoration-none text-secondary" do %>
          <i class="bi bi-arrow-left"></i> Volver al Dashboard
        <% end %>
      </div>

    </div>
  </div>
</div>