<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people-fill me-2"></i>Gesti√≥n de Usuarios</h2>
    <%= link_to new_user_path, class: "btn btn-primary" do %>
      <i class="bi bi-person-plus-fill me-1"></i> Registrar Nuevo Usuario
    <% end %>
  </div>

  <div class="card shadow-sm border-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-dark">
          <tr>
            <th class="ps-4">Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th class="text-center">Tickets Creados</th>
            <th class="text-center">Tickets Asignados</th>
            <th class="text-end pe-4">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="ps-4">
                <strong><%= user.name %></strong>
              </td>
              <td><%= user.email %></td>
              <td>
                <% badge_class = case user.role
                   when 'admin' then 'bg-danger'
                   when 'agent' then 'bg-info text-dark'
                   else 'bg-secondary'
                   end %>
                <span class="badge <%= badge_class %>">
                  <%= user.role&.humanize || "Sin Rol" %>
                </span>
              </td>
              <td class="text-center">
                <span class="badge rounded-pill bg-light text-dark border"><%= user.tickets.count %></span>
              </td>
              <td class="text-center">
                <span class="badge rounded-pill bg-light text-dark border"><%= user.assigned_tickets.count %></span>
              </td>
              <td class="text-end pe-4">
                <%= link_to edit_user_path(user), class: "btn btn-outline-primary btn-sm rounded-pill" do %>
                  <i class="bi bi-pencil-square me-1"></i> Editar
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>